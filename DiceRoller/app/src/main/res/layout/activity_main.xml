<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.diceroller.MainActivity">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inital_header"
        android:textColor="@color/colorOrangeCrusta"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/headerText"
        android:id="@+id/imageHolder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:id="@+id/firstDiceImage"
            android:src="@drawable/six"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:id="@+id/secondDiceImage"
            android:src="@drawable/six"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/rollButton"
        android:layout_below="@id/imageHolder"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/shake"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:theme="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
