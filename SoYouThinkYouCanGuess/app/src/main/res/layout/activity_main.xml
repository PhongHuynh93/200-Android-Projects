<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.soyouthinkyoucanguess.MainActivity">

    <LinearLayout
        android:id="@+id/introLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:layout_marginTop="80dp"
            android:id="@+id/headerInfo"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="@string/Guess_info"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           />

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/easy"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/medium"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/hard"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/headInfo"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="@string/Guess_info"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/gameTypeInfo"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/numGuess"
            android:text="@string/guess_number"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="25dp"
            android:id="@+id/userInput"
            android:textStyle="normal"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/guessButton"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="@string/guess_button"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_marginTop="35sp"
            android:id="@+id/guessOutcome"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <LinearLayout
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/playAgainButton"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="@string/play_again_button"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
               />

            <Button
                android:id="@+id/homeButton"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="@string/home_button"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
