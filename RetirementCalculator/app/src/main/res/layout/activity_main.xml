<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.retirementcalculator.MainActivity">

    <TextView
        android:id="@+id/labelInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_header"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/currentAge"
        android:inputType="number"
        android:layout_below="@id/labelInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/age_info"
        android:textSize="25sp"
        android:textStyle="normal"
        android:textAlignment="center"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/futureAge"
        android:inputType="number"
        android:layout_below="@id/currentAge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/retire_info"
        android:textSize="25sp"
        android:textStyle="normal"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_below="@id/futureAge"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/userOutput"
        android:layout_below="@id/calculateButton"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
