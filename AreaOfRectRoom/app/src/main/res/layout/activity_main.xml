<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.areaofrectroom.MainActivity">

    <EditText
        android:hint="@string/lengthInfo"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/lengthInput"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"/>

    <EditText
        android:layout_below="@id/lengthInput"
        android:hint="@string/widthInfo"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/widthInput"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"/>

    <LinearLayout
        android:id="@+id/switchHolder"
        android:layout_marginTop="20dp"
        android:layout_below="@id/widthInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/metre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchInfo"
            android:layout_below="@+id/widthInput"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@id/switchHolder"
        android:id="@+id/userOutput"
        android:textStyle="normal"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
