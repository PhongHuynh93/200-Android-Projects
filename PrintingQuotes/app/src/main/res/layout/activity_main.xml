<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.printingquotes.MainActivity">

    <TextView
        android:id="@+id/quoteInfo"
        android:text="@string/quoteInfo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_below="@id/quoteInfo"
        android:id="@+id/userQuoteInput"
        android:textSize="20sp"
        android:textStyle="normal"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quoterInfo"
        android:layout_below="@id/userQuoteInput"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/quoter"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/userQuoterInput"
        android:layout_below="@id/quoterInfo"
        android:textStyle="normal"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/userOutput"
        android:layout_below="@id/userQuoterInput"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
